<%INIT>
require XML::RSS;
require LWP::Simple;

%::escapes = map { chr($_) => sprintf("%%%02X", $_) } 0..255 unless %::escapes;

my $file = $URL;
$file =~ s/([^\w\.])/$::escapes{$1}/g;
$file = File::Spec->catfile( ($ENV{TEMP} || '/tmp'), $file);
my $rc = eval { LWP::Simple::mirror( $URL, $file ) };
my $rss = XML::RSS->new;
$rss->parsefile($file);
</%INIT>
