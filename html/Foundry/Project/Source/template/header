<div id="navpath">
[% url = [script,repos,''] %]
[% url = url.join('/') %]
[% urlpath = ['',''] %]
<a href="[% url %]">[[% repos %]]</a>
[% FOREACH p = navpaths %]
  [% CALL urlpath.splice(-1, 0, p) %]
  [% IF loop.count == loop.size %]
    [% IF p %]
/ [% p %]
    [% END %]
  [% ELSE %]
/  <a href="[% url %][% action %][% urlpath.join('/') %]">[% p %]</a>
  [% END %]
[% END %]
</div>
