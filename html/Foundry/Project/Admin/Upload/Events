<%INIT>
my $ReadOnly = ($AllEvents or !$Parent);
$m->comp('ProcessEvents' => %ARGS) unless $ReadOnly;
my $Events = $QueueObj->FunctionItems('Events');
$Events->Limit( FIELD => 'Resolution', VALUE => $Parent->Id ) if $Parent;
$Events->OrderBy( FIELD => 'Subject', ORDER => 'ASC' );
</%INIT>
<%ARGS>
$AllEvents => 0
$Parent => undef
$QueueObj
$ARGS
</%ARGS>
